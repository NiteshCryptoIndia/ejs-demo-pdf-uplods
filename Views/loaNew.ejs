                display: flex;
                align-items: center;
                justify-content: space-between;
              }

              .sn_img {
                text-align: center;
              }

              .sn_img img {
                margin: 0 auto 4px;
                display: block;
              }

              .sn_img small {
                font-size: 10px;
              }


              /* Print settings */
              @media print {

                /* @page  {
        padding-top: 120px;  
      }   */

                .content {
                  max-width: 800px;
                  margin: 10px auto 10px auto;
                  /* space for header & footer */
